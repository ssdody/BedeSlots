@model UserListingViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">User Administration</h2>
<hr />

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">

<div class="container">
    <div class="div-table">
        <table id="table-users" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Balance</th>
                    <th>User Currency</th>
                    <th>Role</th>
                    <th>Edit Role</th>
                    <th>Delete</th>
                </tr>
            </thead>
        </table>

        <div class="modal fade" id="myModal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <a href="#" class="close" data-dismiss="modal">&times;</a>
                    </div>
                    <div class="modal-body" id="myModalBodyDiv1">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
    <script src="~/js/User/tableUserManage.js"></script>
    <script src="~/js/User/editRole.js"></script>
    <script src="~/js/User/deleteUser.js"></script>
}

